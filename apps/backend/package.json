  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "test": "NODE_ENV=test echo \"Not implemented!\" && exit 1",
    
    "//": "Utilities for working with DB migrations",
    "migrator": "node -r ts-node/register database/migrator.ts",
    "migrator:create": "yarn migrator create --name",
    "migrator:apply": "yarn migrator up",
    "migrator:revert": "yarn migrator down",
    "migrator:list-pending": "yarn migrator pending",
    "migrator:list-executed": "yarn migrator executed"
  },
